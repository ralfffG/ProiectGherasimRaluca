@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Product";
}

<div class="row mb-2 mt-2 operationsButtons">
    <div class="col-md-12">
        <a href="/Product/New" class="btn btn-new btn-outline-new font-weight-bold mr-2" data-toggle="tooltip" title="New" data-placement="top">
            <span class="fa fa-plus-circle"></span>
        </a>

        <button class="btn btn-outline-dark font-weight-bold mr-2" data-toggle="tooltip" title="Edit" data-placement="top" onclick="Product.onEditBtnPress()">
            <span class="fa fa-edit"></span>
        </button>

        <button type="button" class="btn btn-delete btn-outline-delete font-weight-bold mr-2" id="btnDelete" data-toggle="tooltip" data-placement="top" title="Delete" onclick="Product.onDelete()">
            <span class="fa fa-trash"></span>
        </button>
    </div>
</div>

<br/><br/>

     <table id="table" class="table table-hover table-striped table-light">
         <thead style="background-color:sandybrown">
             <tr>
                 <th hidden>Product Id</th>
                 <th style="font-size:x-large;color:brown">Imagine</th>
                 <th style="font-size: x-large; color: brown ">Denumire</th>
                 <th style="font-size: x-large; color: brown ">Pret</th>
                 <th style="font-size: x-large; color: brown ">Descriere</th>
                 <th style="font-size: x-large; color: brown ">In stoc</th>
             </tr>
         </thead>

         <tbody style="background-color:beige">

             @foreach (var item in Model)
              {
                 <tr id="@item.Id">
                     <td hidden>@item.Id</td>
                     <td><img style="width: 300px; height: 150px;" src="~/@item.ImagePath" alt="nu exista imagine momentan" /></td>
                     <td style="font-size:large"><b>@item.Name</b></td>
                     <td style="font-size:large"><b>@item.Price</b></td>
                     <td style="font-size:large"><b>@item.Description</b></td>
                     <td><input type="checkbox" checked="@item.IsAvailable" /></td>
                 </tr>
              }

         </tbody>

     </table>